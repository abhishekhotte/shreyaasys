@model Shreyaasys.Models.Login
@{
    ViewBag.Title = "Login";
}
<script src="~/Scripts/icheck.min.js"></script>
<link href="~/Scripts/icheck/blue.css" rel="stylesheet" />
<script>
    $(document).ready(function () {
        $('html, body').animate({
            scrollTop: $("#divLogin").offset().top - 85
        }, 500);

        $('.chk-icheck').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        });

    })
</script>
<div class="login-box" style="margin-top:40px" id="divLogin">
    <div class="box box-primary ">
        <div class="box-header">
            <h2 class="box-title">Sign in</h2>
        </div>
        <div class="box-body with-border">
            <!-- /.login-logo -->
            <div class="login-box-body">
                <form action="/account/login" method="post">
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(l=>l.EmailId,null,new { type = "email", @class="form-control", placeholder="Email" })
                        @*<input type="email" class="form-control" placeholder="Email">*@
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(l => l.Password, null, new { type = "password", @class = "form-control", placeholder = "Password" })
                        @*<input type="password" class="form-control" placeholder="Password">*@
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="checkbox icheck">
                                <label>
                                    @Html.CheckBoxFor(l=>l.RememberMe,new {@class="chk-icheck" })
                                    @*<input type="checkbox" class="chk-icheck">*@ Remember Me
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
                <!-- /.social-auth-links -->
            </div>
            <!-- /.login-box-body -->

        </div>
        <!-- /.box-body -->
    </div>
</div>



